<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:src="@drawable/esip"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="About ESIP"
            android:textAllCaps="false"

           android:textColor="#ffffff"
            android:background="@drawable/btn_menu"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:drawableStart="@drawable/es"
            android:drawablePadding="10dp"
            android:id="@+id/about"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Play Game"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/btn_menu"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:drawableStart="@drawable/play"
            android:drawablePadding="10dp"
            android:id="@+id/play"
            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:text="Gallery"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/btn_menu"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:drawableStart="@drawable/picture"
            android:drawablePadding="10dp"
            android:id="@+id/galery"
            />

    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <Button
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/btn_menu"
            android:textSize="30dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingBottom="10dp"

            android:paddingTop="10dp"
            android:drawableStart="@drawable/exit"
            android:drawablePadding="10dp"
            android:id="@+id/exit"
            />

    </LinearLayout>



</LinearLayout>

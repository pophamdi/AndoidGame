<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="270"
                android:centerX="39%"
                android:centerColor="#ff1919ff"
                android:startColor="#ff6844ef"
                android:endColor="#ff0e3b65"
                android:type="linear"
                />
            <padding
                android:left="24dp"
                android:top="0dp"
                android:right="24dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="7dp"
                android:color="#EDEBB7"
                />
        </shape>
    </item>
</selector>